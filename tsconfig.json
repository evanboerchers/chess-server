{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES6",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["node", "vitest/globals"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}